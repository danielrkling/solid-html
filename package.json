  "author": "Daniel Kling danielrkling@gmail.com",
  "license": "MIT",
  "dependencies": {
    "html5parser": "^2.0.2",
    "solid-js": "^1.9.6"
  },
  "devDependencies": {
    "@solidjs/router": "^0.15.3",
    "jsdom": "^27.4.0",
    "tsdown": "^0.14.1",
    "vite": "^6.3.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^4.0.18"
